{
  "name": "netlify-js-app",
  "version": "2.0.0",
  "engines": {
    "node": ">=16.14.2"
  },
  "private": false,
  "description": "Includes several common NPM packages to simplify setting up projects and reduce pull requests",
  "main": "index.js",
  "config": {
    "icons": "./_data/icons.csv",
    "dir": {
      "css": "css/",
      "js": "js/",
      "img": "img/",
      "html": "./"
    }
  },
  "scripts": {
    "test": "npm run netlify:lint && npm run netlify:build",
    "preversion": "npm test",
    "version:bump": "npm run version:bump:patch",
    "version:bump:patch": "npm version --no-git-tag-version patch",
    "version:bump:minor": "npm version --no-git-tag-version minor",
    "version:bump:major": "npm version --no-git-tag-version major",
    "netlify:lint": "npm run netlify:lint:js && npm run netlify:lint:css && npm run netlify:lint:html",
    "netlify:lint:js": "if [ -f .eslintrc.json ]; then eslint .; fi",
    "netlify:lint:css": "if [ -f .stylelintrc.json ]; then stylelint './**.css'; fi",
    "netlify:lint:html": "if [ -f .htmlhintrc ]; then htmlhint ${npm_package_config_dir_html}; fi",
    "fix:css": "stylelint './**.css' --fix",
    "fix:js": "eslint. --fix",
    "netlify:build": "npm run netlify:build:icons && npm run netlify:build:css && npm run netlify:build:js",
    "netlify:build:css": "if [ -f 'postcss.config.js' ]; then postcss ${npm_package_config_dir_css}index.css -o ${npm_package_config_dir_css}index.min.css; fi",
    "netlify:build:js": "if [ -f 'rollup.config.js' ]; then rollup --config; fi",
    "netlify:build:icons": "if [ -f ${npm_package_config_icons} ]; then $(svg-sprite-generate -c ${npm_package_config_icons} -o 'img/icons.svg'); fi"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shgysk8zer0/netlify-js-app.git"
  },
  "keywords": [
    "netlify",
    "npm",
    "package"
  ],
  "author": "Chris Zuber <admin@kernvalley.us>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shgysk8zer0/netlify-js-app/issues"
  },
  "homepage": "https://github.com/shgysk8zer0/netlify-js-app#readme",
  "dependencies": {
    "@babel/core": "^7.13.15",
    "@rollup/plugin-babel": "^5.3.0",
    "cssnano": "^5.0.17",
    "cssnano-preset-default": "^5.1.12",
    "eslint": "^8.0.1",
    "eslint-plugin-async-await": "0.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "htmlhint": "^1.0.0",
    "netlify-cli": "^10.0.0",
    "postcss": "^8.4.7",
    "postcss-cli": "^10.0.0",
    "postcss-discard-comments": "^5.0.3",
    "postcss-import": "^14.0.2",
    "postcss-import-url": "^7.0.0",
    "postcss-media-minmax": "^5.0.0",
    "postcss-preset-env": "^7.4.1",
    "postcss-url": "^10.1.3",
    "rollup": "^2.39.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-url-resolve": "^0.2.0",
    "stylelint": "^14.0.0",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-standard": "^27.0.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^2.0.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.15.8"
  }
}
